@using EPazar.Entity.SanalEntity


@model PanelKategorilerEntityleri
@{ 
    var Kategoriler = Model.Kategoriler;
    var AnaKategoriler = Model.AnaKategoriler;
}


<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper pb-0">
            <div class="page-header flex-wrap">
                <div class="header-left">
                    <form action="#" method="post">
                        <select type="text" name="AnaKategoriId" class="btn btn-outline-secondary mb-2 mb-md-0">
                            @foreach (var item in AnaKategoriler)
                            {
                                <option value="@item.Id">@item.Ad</option>
                            }
                        </select>
                        <input type="text" name="Ad" placeholder="Kategori Adi" class="btn btn-outline-secondary mb-2 mb-md-0" />
                        <input type="text" name="Sira" placeholder="Kategori Sirasi" class="btn btn-outline-dribbble mb-2 mb-md-0" />
                        <button type="submit" class="btn btn-facebook mb-2 mb-md-0">Arama Yap</button>
                    </form>
                </div>
                <div class="header-right d-flex flex-wrap mt-md-2 mt-lg-0">
                    <div class="d-flex align-items-center">
                        <a href="#">
                        </a>
                    </div>
                </div>
            </div>

            <div style="padding: 0;" class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>AnaKategori Adi</th>
                                        <th>Sıra</th>
                                        <th>Ad</th>
                                        <th>Oluşturma Zamanı</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <script>
                                        function KategoriDetayaGit(Id) {
                                            window.location.href = "/Kategoriler/KategoriDetay?Id=" + Id;
                                        }
                                        function MusteriSil(Id) {
                                            if (confirm('İlgili Kategori Altında Bulunan Tüm Alt Kategoriler Bu Durumdan Etkilenir .Kategoriyi Silmek İstiyorsanız Tamam\'a Tıklayın ❔')) {
                                                window.location.href = "/Kategoriler/KategoriSil?Id=" + Id;
                                            } else {

                                            }
                                        }
                                    </script>
                                    @foreach (var item in Kategoriler)
                                    {
                                <tr>
                                    <td> @item.AnaKategoriAdi </td>

                                    <td class="py-1">
                                        @item.Sira
                                    </td>
                                    <td> @item.Ad </td>

                                    <td>@item.CreateTime</td>

                                    <td><button type="button" onclick="KategoriDetayaGit(@item.Id)" class="btn btn-primary">Düzenle</button></td>
                                    <td><button type="button" onclick="MusteriSil(@item.Id)" class="btn btn-danger">Sil</button></td>

                                </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- partial:partials/_footer.html -->
            <footer class="footer">
                <div class="container">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © SRK YILMAZ İNŞAAT (Tüm Hakları Saklıdır) </span>
                    </div>
                    <div>
                    </div>
                </div>
            </footer>
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
