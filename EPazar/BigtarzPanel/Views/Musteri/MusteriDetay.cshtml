
@using EPazar.Entity.SanalEntity

@model PanelMusteriDetayEntityleri

@{ 

}


<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper pb-0">
            <div class="page-header flex-wrap">
                <div class="header-left">

                </div>
                <div class="header-right d-flex flex-wrap mt-md-2 mt-lg-0">
                    <div class="d-flex align-items-center">
                        <a href="#">
                        </a>
                    </div>
                </div>
            </div>

            <div style="padding: 0;" class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3>Kullanıcı Bilgileri</h3>
                        <div class="card-body row">

                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    Ad Soyad
                                </div>
                                <div class="col-8">
                                    @Model.Kullanicilar.Ad @Model.Kullanicilar.Soyad
                                </div>
                            </div>

                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    Telefon
                                </div>
                                <div class="col-8">
                                    @Model.Kullanicilar.Telefon
                                </div>
                            </div>
                            
                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    E-Mail
                                </div>
                                <div class="col-8">
                                    @Model.Kullanicilar.EMail
                                </div>
                            </div>

                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    Doğum Günü
                                </div>
                                <div class="col-8">
                                    @Model.Kullanicilar.DogumGunu - @Model.Kullanicilar.DogumAyi - @Model.Kullanicilar.DogumYili
                                </div>
                            </div>

                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    Kayit Tarihi
                                </div>
                                <div class="col-8">
                                    @Model.Kullanicilar.CreateTime
                                </div>
                            </div>


                           
                        </div>
                    </div>
                </div>
            </div>


           
            <div style="padding: 0;" class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3>Müsteri Adresleri</h3>
                        <div class="table-responsive">
                            <script>
                                function AdresSil(Id) {
                                    if (confirm('Müsterinin Adresini Silmek İstiyorsanız Tamam\'a Tıklayın ❔')) {
                                        window.location.href = "/Musteri/KullaniciAdresiSil?Id=" + Id;
                                    } else {

                                    }
                                }
                            </script>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Ad Soyad</th>
                                        <th>Telefon</th>
                                        <th>Sehir - İlçe - Mahalle</th>
                                        <th>Adres Başlığı - Adres</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model.KullaniciAdresleri)
                                    {
                                        <tr>
                                            <td>
                                                <label onclick="AdresSil('@item.Id')" class="badge badge-warning"> <i class="mdi mdi-delete"></i> Sil</label>
                                            </td>
                                            <td>
                                                @item.AdSoyad
                                            </td>
                                            <td>
                                                @item.Telefon 
                                            </td>
                                            <td>
                                                @item.Sehir - @item.Ilce - @item.Mahalle
                                            </td>
                                            <td>
                                                @item.AdresBasligi - @item.Adres
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- partial:partials/_footer.html -->
            <footer class="footer">
                <div class="container">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © SRK YILMAZ İNŞAAT (Tüm Hakları Saklıdır) </span>
                    </div>
                    <div>
                    </div>
                </div>
            </footer>
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>