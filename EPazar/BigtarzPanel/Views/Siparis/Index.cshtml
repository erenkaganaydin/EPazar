@using EPazar.Entity.Entity


@model List<Siparis>

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper pb-0">
            <div class="page-header flex-wrap">
                <div class="header-left">
                    <form action="#" method="post">
                        <input type="text" placeholder="Sipariş Numarası" class="btn btn-outline-secondary mb-2 mb-md-0" />
                        <input type="text" placeholder="Sipariş Durumu" class="btn btn-outline-success mb-2 mb-md-0" />
                        <input type="text" placeholder="Müşteri Ad Soyad" class="btn btn-outline-dribbble mb-2 mb-md-0" />
                        <input type="text" placeholder="Sipariş Tarihi [ 2022-05-07 ]" class="btn btn-outline-info mb-2 mb-md-0" />
                        <button type="submit" class="btn btn-facebook mb-2 mb-md-0">Arama Yap</button>
                    </form>
                </div>
                <div class="header-right d-flex flex-wrap mt-md-2 mt-lg-0">
                    <div class="d-flex align-items-center">
                        <a href="#">
                        </a>
                    </div>
                </div>
            </div>

            <div style="padding: 0;" class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Sipariş Numarası</th>
                                        <th>Ad Soyad</th>
                                        <th>Toplam Tutar</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>Ödeme Durumu</th>
                                        <th>Sipariş Durumu</th>
                                        <th>İlerleme Durumu</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <script>
                                        function SiparisDetayaGit(Id) {
                                            window.location.href = "/Siparis/SiparisDetay?Id=" + Id;
                                        }
                                    </script>
                                    @foreach (var item in Model)
                                    {
                                        <tr onclick="SiparisDetayaGit(@item.Id)">
                                            <td class="py-1">
                                                @item.SiparisNumarasi
                                            </td>
                                            <td> @item.Kullanicilar.Ad @item.Kullanicilar.Soyad </td>
                                            <td>
                                                @item.ToplamTutar ₺
                                            </td>
                                            <td>@item.CreateTime</td>

                                            <td>
                                                <label class="badge badge-info">@item.OdemeDurum.Ad</label>
                                            </td>
                                            <td>
                                                <label class="badge badge-warning">@item.SiparisDurum.Ad</label>
                                            </td>
                                            <td>
                                                <div class="progress">
                                                    @{
                                                        var IlerlemeYuzde = 16.66 * item.SiparisDurumId;
                                                    }
                                                    <div class="progress-bar bg-success" role="progressbar" style="width: @IlerlemeYuzde.ToString().Replace(",",".")%;" aria-valuenow="@IlerlemeYuzde.ToString().Replace(",",".")" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- partial:partials/_footer.html -->
            <footer class="footer">
                <div class="container">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © SRK YILMAZ İNŞAAT (Tüm Hakları Saklıdır) </span>
                    </div>
                    <div>
                    </div>
                </div>
            </footer>
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
