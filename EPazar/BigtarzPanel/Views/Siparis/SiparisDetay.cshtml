
@using EPazar.Entity.SanalEntity

@model PanelSiparisDetayEntityleri

@{ 

}


<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper pb-0">
            <div class="page-header flex-wrap">
                <div class="header-left">

                </div>
                <div class="header-right d-flex flex-wrap mt-md-2 mt-lg-0">
                    <div class="d-flex align-items-center">
                        <a href="#">
                        </a>
                    </div>
                </div>
            </div>

            <div style="padding: 0;" class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3>Kullanıcı Bilgileri</h3>
                        <div class="card-body row">

                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    Ad Soyad
                                </div>
                                <div class="col-8">
                                    @Model.Siparis.Kullanicilar.Ad @Model.Siparis.Kullanicilar.Soyad
                                </div>
                            </div>

                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    Telefon
                                </div>
                                <div class="col-8">
                                    @Model.Siparis.KullaniciAdresleri.Telefon
                                </div>
                            </div>

                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    Sehir
                                </div>
                                <div class="col-8">
                                    @Model.Siparis.KullaniciAdresleri.Sehir
                                </div>
                            </div>


                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    İlce
                                </div>
                                <div class="col-8">
                                    @Model.Siparis.KullaniciAdresleri.Ilce
                                </div>
                            </div>


                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    Mahalle
                                </div>
                                <div class="col-8">
                                    @Model.Siparis.KullaniciAdresleri.Mahalle
                                </div>
                            </div>

                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    Adres Başlığı
                                </div>
                                <div class="col-8">
                                    @Model.Siparis.KullaniciAdresleri.AdresBasligi
                                </div>
                            </div>

                            <div class="col-12 row mt-4">
                                <div class="col-4" style="font-weight: bold;">
                                    Adres
                                </div>
                                <div class="col-8">
                                    @Model.Siparis.KullaniciAdresleri.Adres
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row" style="margin: auto;justify-content: space-between">
                <div class="col-xl-5 col-5 stretch-card grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between flex-wrap">
                                <div>
                                    <div class="card-title mb-0">Ödeme Durumu</div>
                                </div>
                            </div>
                            <div class="flot-chart-wrapper">
                                <div>
                                    <form action="/Siparis/OdemeDurumGuncelle" method="post">
                                        <input type="hidden" name="Id" value="@Model.Siparis.Id">
                                        <select class="form-control mt-3" name="OdemeDurumId">
                                            @foreach (var item in Model.OdemeDurumlari)
                                            {
                                                if (item.Id == Model.Siparis.OdemeDurumId)
                                                {
                                                    <option selected value="@item.Id">@item.Ad</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Id">@item.Ad</option>
                                                }

                                            }
                                        </select>
                                        <button type="submit" class="btn btn-info mr-2 mt-3"> Güncelle </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-5 col-5 stretch-card grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between flex-wrap">
                                <div>
                                    <div class="card-title mb-0">Sipariş Durumu</div>
                                </div>
                            </div>
                            <div class="flot-chart-wrapper">
                                <div>
                                    <form action="/Siparis/SiparisDurumGuncelle" method="post">
                                        <input type="hidden" name="Id" value="@Model.Siparis.Id">
                                        <select class="form-control mt-3" name="SiparisDurumId" id="">
                                            @foreach (var item in Model.SiparisDurumlari)
                                            {
                                                if (item.Id == Model.Siparis.SiparisDurumId)
                                                {
                                                    <option selected value="@item.Id">@item.Ad</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Id">@item.Ad</option>
                                                }

                                            }
                                        </select>
                                        <button type="submit" class="btn btn-info mr-2 mt-3"> Güncelle </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div style="padding: 0;" class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3>Siparis Detay</h3>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Tedarikci</th>
                                        <th>Urun (Id)</th>
                                        <th>Adet</th>
                                        <th>Urun Fiyatı</th>
                                        <th>Urun Ozellik(varsa)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model.SiparisDetay)
                                    {
                                        <tr>
                                            <td>
                                                @item.UrunTedarikciAdi
                                            </td>
                                            <td>
                                                @item.UrunAdi (@item.UrunId)
                                            </td>
                                            <td>
                                                @item.Adet 
                                            </td>
                                            <td>
                                                @item.UrunFiyati
                                            </td>
                                            <td>
                                                @item.OzellikAdi
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- partial:partials/_footer.html -->
            <footer class="footer">
                <div class="container">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © SRK YILMAZ İNŞAAT (Tüm Hakları Saklıdır) </span>
                    </div>
                    <div>
                    </div>
                </div>
            </footer>
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>