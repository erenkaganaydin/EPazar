            </form>
            <form action="~/GirisYapKayitOl/KayitOl" method="post" class="sign-up-form">
                <h2 class="title">Kayıt Ol</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" name="Ad" required placeholder="Size Hitap Edebilmemiz İçin Adınız" />
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" name="Soyad" required placeholder="Soyadınız" />
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="tel" name="Telefon" required maxlength="11" placeholder="Telefon Numaranız" />
                </div>
